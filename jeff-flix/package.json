{
  "name": "bun-react-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:api": "bun --hot apps/api/index.ts",
    "dev:web": "bun --hot apps/web/src/index.tsx",
    "start": "NODE_ENV=production bun src/index.tsx",
    "build": "bun run build.ts",
    "db:generate": "bun drizzle-kit generate --config=drizzle.config.ts",
    "db:migrate": "bun drizzle-kit migrate --config=drizzle.config.ts",
    "db:push": "bun drizzle-kit push --config=drizzle.config.ts"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "bun-plugin-tailwind": "^0.0.15",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.3",
    "hono": "^4.8.9",
    "lucide-react": "^0.525.0",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "react": "^19",
    "react-dom": "^19",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.15.4",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.20.3"
  }
}
